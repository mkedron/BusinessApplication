<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <Button
            android:text="@string/deatils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailsButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" android:layout_marginStart="34dp"
            android:layout_marginBottom="176dp" app:layout_constraintBottom_toTopOf="@+id/imageView2"
            android:onClick="detailsViewOnClick"/>
    <Button
            android:text="@string/features"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/featuresButton"
            android:onClick="featuresViewOnClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="34dp" app:layout_constraintTop_toBottomOf="@+id/detailsButton"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/infoButton"/>
    <Button
            android:text="@string/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/infoButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="34dp" app:layout_constraintTop_toBottomOf="@+id/featuresButton"
            android:onClick="infoViewOnClick"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/animal"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/detailsButton" android:layout_marginBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="34dp" android:layout_marginEnd="34dp"
            tools:srcCompat="@drawable/animal" app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>