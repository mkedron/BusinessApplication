<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <Button
            android:text="@string/deatils"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/detailsButton"
            android:onClick="detailsViewOnClick"
            android:layout_marginTop="33dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@+id/featuresButton" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="@string/features"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/featuresButton"
            android:onClick="featuresViewOnClick"
            app:layout_constraintTop_toBottomOf="@+id/detailsButton"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" app:layout_constraintBottom_toTopOf="@+id/infoButton"
            app:layout_constraintStart_toStartOf="@+id/detailsButton"/>
    <Button
            android:text="@string/info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/infoButton"
            android:onClick="infoViewOnClick"
            app:layout_constraintTop_toBottomOf="@+id/featuresButton"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginBottom="46dp"
            app:layout_constraintStart_toStartOf="@+id/featuresButton" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="47dp"
            android:layout_height="40dp" app:srcCompat="@drawable/animal"
            android:id="@+id/imageView2"
            tools:srcCompat="@drawable/animal"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toEndOf="@+id/detailsButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="36dp" app:layout_constraintTop_toTopOf="@+id/detailsButton"
            app:layout_constraintBottom_toBottomOf="@+id/infoButton" android:layout_marginEnd="3dp"
    />

</android.support.constraint.ConstraintLayout>